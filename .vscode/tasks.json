 {
    "version": "2.0.0",
    "tasks": [

        /* ================= COULOMB ================= */
        {
            "label": "Compile Coulomb",
            "type": "shell",
            "command": "g++",
            "args": ["-c","src/coulomb.cpp","-Iinclude","-o","coulomb.o"],
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Create Coulomb Library",
            "type": "shell",
            "command": "ar",
            "args": ["rcs","libcoulomb.a","coulomb.o"],
            "dependsOn": "Compile Coulomb"
        },
        {
            "label": "Build Coulomb Example",
            "type": "shell",
            "command": "g++",
            "args": ["example/test_coulomb.cpp","-Iinclude","-L.","-lcoulomb","-o","coulomb_test.exe"],
            "dependsOn": "Create Coulomb Library"
        },

